<Window x:Class="JKWatcher.ConnectionStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JKWatcher"
        mc:Ignorable="d"
        Title="ConnectionStats" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <DataGrid Grid.ColumnSpan="3" IsReadOnly="True"  CanUserAddRows="False" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" x:Name="commandQueueGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding type}"></DataGridTextColumn>
                <DataGridTextColumn Header="MinTypeDelay" Binding="{Binding minimumDelayFromSameType}"></DataGridTextColumn>
                <DataGridTextColumn Header="Priority" Binding="{Binding priority}"></DataGridTextColumn>
                <DataGridTextColumn Header="Command" Binding="{Binding command}"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <DataGrid  Grid.ColumnSpan="3" Grid.Row="1" IsReadOnly="True"  CanUserAddRows="False" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" x:Name="recentCommandQueueGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Disc." Binding="{Binding discarded}"></DataGridTextColumn>
                <DataGridTextColumn Header="Time" Binding="{Binding time}"></DataGridTextColumn>
                <DataGridTextColumn Header="Type" Binding="{Binding request.type}"></DataGridTextColumn>
                <DataGridTextColumn Header="MinTypeDelay" Binding="{Binding request.minimumDelayFromSameType}"></DataGridTextColumn>
                <DataGridTextColumn Header="Priority" Binding="{Binding request.priority}"></DataGridTextColumn>
                <DataGridTextColumn Header="Command" Binding="{Binding request.command}"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <StackPanel x:Name="clientStatsPanel" Grid.Row="2">
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120" FontSize="10">Demosize:</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding demoSizeKiB,Mode=OneWay}"  FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120"  FontSize="10">Demosize full flushed:</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding demoSizeFullFlushedKiB,Mode=OneWay}"  FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120"  FontSize="10">Delta snaps:</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding deltaSnaps,Mode=OneWay}" Width="120"  FontSize="10" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Non-Delta snaps:</Label>
                <TextBox Text="{Binding nonDeltaSnaps,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Total messages:</Label>
                <TextBox Text="{Binding totalMessages,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Dropped messages:</Label>
                <TextBox Text="{Binding messagesDropped,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Out of order messages:</Label>
                <TextBox Text="{Binding messagesOutOfOrder,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
        </StackPanel>
        <StackPanel x:Name="clientStatsPanel2" Grid.Row="2" Grid.Column="1">

            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Skipped messages:</Label>
                <TextBox Text="{Binding messagesSkipped,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120" FontSize="10">Skippable messages:</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding messagesSkippable,Mode=OneWay}"  FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120" FontSize="10">SuperSkippable msgs:</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding messagesSuperSkippable,Mode=OneWay}"  FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120"  FontSize="10">Unskippable (svc):</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding messagesUnskippableSvc,Mode=OneWay}"  FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120"  FontSize="10">Unskippable (new cmd):</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding messagesUnskippableNewCommands,Mode=OneWay}"  FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Margin="0" Padding="2" Width="120"  FontSize="10">Unskippable (non-delta):</Label>
                <TextBox  Margin="0" Padding="2" Text="{Binding messagesUnskippableNonDelta,Mode=OneWay}" Width="120"  FontSize="10" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Unskipped (time):</Label>
                <TextBox Text="{Binding messagesNotSkippedTime,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            
        </StackPanel>
        <StackPanel x:Name="clientStatsPanel3" Grid.Row="2" Grid.Column="2">

            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Client FPS:</Label>
                <TextBox Text="{Binding lastFrameDeltaFPS,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">UserCMD FPS:</Label>
                <TextBox Text="{Binding lastUserCommandDeltaFPS,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">UserPacket FPS:</Label>
                <TextBox Text="{Binding lastUserPacketDeltaFPS,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10">Demo current time:</Label>
                <TextBox Text="{Binding demoCurrentTime,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10" ToolTip="Demo current time based on actual writing into the demo. The other value is more up to date, but less precise.">Demo current time (wr.):</Label>
                <TextBox Text="{Binding demoCurrentTimeWritten,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Width="120"  Margin="0" Padding="2" FontSize="10" ToolTip="Demo current time sync fix. Shows how much the old demo current time calculation method would have drifted by now.">Demo current time (sync):</Label>
                <TextBox Text="{Binding demoCurrentTimeSyncFix,Mode=OneWay}" Margin="0" Padding="2" FontSize="10" Width="120" IsReadOnly="True"></TextBox>
            </WrapPanel>
            
        </StackPanel>
    </Grid>
</Window>

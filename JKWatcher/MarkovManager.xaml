<Window x:Class="JKWatcher.MarkovManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JKWatcher"
        mc:Ignorable="d"
        Title="MarkovManager" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="markovTrainBtn" Click="markovTrainBtn_Click">Train Markov model</Button>
            <ProgressBar x:Name="progressBar" Height="20" Maximum="100" Value="0" d:Value="50"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
